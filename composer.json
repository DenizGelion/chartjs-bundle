{
    "name": "denizgelion/chartjs-bundle",
    "type": "contao-bundle",
    "description": "ChartJs integration for Contao 4",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Deniz Gelion",
            "homepage": "https://github.com/DenizGelion"
        }
    ],
    "require": {
        "php": "^7.0",
        "contao/core-bundle": "^4.6"
    },
    "conflict": {
        "contao/core": "*",
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0"
    },
    "extra": {
        "contao-manager-plugin": "denizgelion\\ContaoChartJsBundle\\ContaoManager\\Plugin"
    },
    "autoload": {
        "psr-4": {
            "denizgelion\\ContaoChartJsBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "denizgelion\\ContaoChartJsBundle\\Tests\\": "tests/"
        }
    },
    "support": {
        "issues": "https://github.com/DenizGelion/chartjs-bundle/issues",
        "source": "https://github.com/DenizGelion/chartjs-bundle"
    }
}
